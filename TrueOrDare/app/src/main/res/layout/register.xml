<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />


    <TextView
        android:id="@+id/gameTitle2"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="483dp"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        tools:text="Придумайте уникальные имя и пароль" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="257dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="405dp"
        app:srcCompat="@drawable/button_2" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="257dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="344dp"
        app:srcCompat="@drawable/button_2" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="411dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Логин"
        android:inputType="textPersonName"
        android:paddingTop="6dp"
        android:text=""
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white50"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="53dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:paddingTop="6dp"
        android:paddingRight="8dp"
        android:paddingBottom="15dp"
        android:stateListAnimator="@null"
        android:text="СОЗДАТЬ АККАУНТ"
        android:textColor="@color/pink"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="348dp"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:background="@color/transparent"

        android:textColor="@color/white"
        android:textColorHint="@color/white50"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="354dp"
        android:layout_marginBottom="677dp"
        app:srcCompat="@drawable/arrow" />


</RelativeLayout>