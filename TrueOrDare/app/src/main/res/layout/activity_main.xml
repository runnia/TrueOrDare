<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/menucircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/circleformainpage" />

    <TextView
        android:id="@+id/gameTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="511dp"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        android:textColor="@color/pink"
        android:textSize="30dp"
        tools:text="ИЛИ" />

    <TextView
        android:id="@+id/gameTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="455dp"
        android:fontFamily="@font/roboto_bold"
        android:text="TextView"
        android:textColor="@color/pink"
        android:textSize="55dp"
        tools:text="ДЕЙСТВИЕ" />

    <TextView
        android:id="@+id/gameTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="541dp"
        android:fontFamily="@font/roboto_bold"
        android:text="ПРАВДА"
        android:textColor="@color/pink"
        android:textSize="55dp" />


    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="155dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:paddingTop="6dp"
        android:paddingBottom="15dp"
        android:stateListAnimator="@null"
        android:text="ИГРАТЬ"
        android:textColor="@color/pink"
        android:textSize="25dp" />

    <Button
        android:id="@+id/buttonRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="79dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:paddingTop="6dp"
        android:paddingBottom="15dp"
        android:stateListAnimator="@null"
        android:text="ПРАВИЛА"
        android:textColor="@color/pink"
        android:textSize="25dp" />

</RelativeLayout>