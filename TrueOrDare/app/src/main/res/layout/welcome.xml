<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/gameTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="427dp"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        tools:text="ДОБРО ПОЖАЛОВАТЬ" />

    <TextView
        android:id="@+id/gameTitle2"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="330dp"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        tools:text="Войдите в аккаунт или зарегистрируйтесь, чтобы начать игру" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="130dp"
        android:layout_weight="1"
        android:background="@drawable/button_2"
        android:fontFamily="@font/roboto_medium"
        android:paddingTop="8dp"
        android:paddingBottom="13dp"
        android:stateListAnimator="@null"
        android:text="РЕГИСТРАЦИЯ"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/buttonPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="53dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:paddingTop="6dp"
        android:paddingBottom="15dp"
        android:stateListAnimator="@null"
        android:text="ВХОД"
        android:textColor="@color/pink"
        android:textSize="25dp" />


</RelativeLayout>